<h2>Atualização do Produto</h2>
<br>
<form action="/atualizarProduto" method="post">
    <label for="id">Id do Produto:</label><br>
    <input type="text" name="id" placeholder="Id"><br>
    <label for="nome">Nome do Produto:</label><br>
    <input type="text" name="nome_carro" placeholder="Nome do Carro"><br>
    <label for="cor">Cor do Produto:</label><br>
    <input type="text" name="cor_carro" placeholder="Preto"><br>
    <label for="quantidadeEstoque">Quantidade do Produto:</label><br>
    <input type="text" name="quantidade" placeholder="0"><br>
    <label for="precoUnitario">Preço unitário do Produto:</label><br>
    <input type="text" name="precoUnitario" placeholder="Unitário"><br>
    <br>
    <button id="botao-editar"type="submit">Enviar</button>
</form>
{{#if msg}}
    <p>{{msg}}</p>
{{/if}} 
{{#if msgB}}
    <p>{{msgB}}</p>
{{/if}} 